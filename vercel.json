{
    "version": 2,
    "builds": [
        {
            "src": "Frontend/package.json",
            "use": "@vercel/static-build",
            "config": {
                "distDir": "Frontend/build"
            }
        },
        {
            "src": "Backend/package.json",
            "use": "@vercel/node"
        }
    ],
    "outputDirectory": "build",
    "routes": [
        {
            "src": "/api/(.*)",
            "dest": "/Backend/dist/$1"
        },
        {
            "src": "/(.*)",
            "dest": "/Frontend/build/$1"
        }
    ]
}